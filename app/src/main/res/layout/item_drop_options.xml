<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_drop_options_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="标题"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_drop_options_title"
        android:background="@drawable/background_item_fillet">

        <TextView
            android:id="@+id/tv_drop_options_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="这是一段测试文字"
            android:layout_toLeftOf="@+id/iv_drop_options_sign"/>

        <ImageView
            android:id="@+id/iv_drop_options_sign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>